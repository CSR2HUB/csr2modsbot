# CSR2 MODS STORE Telegram Bot V1.0.0 Final Configuration
# Environment ready for production
# Copy this file to .env and fill in your actual values

# ===== REQUIRED CONFIGURATION =====

# Telegram Bot Token (Get from @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxyz1234567890

# Admin Chat ID (Get from @userinfobot) - Where orders will be sent
ADMIN_CHAT_ID=123456789

# ===== SERVER CONFIGURATION =====

# Environment (development, production)
NODE_ENV=production

# Unique server port for CSR2 MODS STORE
PORT=8695

# ===== STORE CONFIGURATION =====

# Store website URL
STORE_WEBSITE=https://csr2mod.com

# Support Telegram username
SUPPORT_TELEGRAM=@csr2mods

# Store name
STORE_NAME=CSR2 MODS STORE

# ===== OPTIONAL WEBHOOK CONFIGURATION =====
# Use these for production webhook setup instead of polling

# Your domain for webhook
WEBHOOK_DOMAIN=https://yourdomain.com

# Webhook path
WEBHOOK_PATH=/telegram

# SSL certificate path (if using self-signed)
# SSL_CERT_PATH=/path/to/cert.pem

# ===== DATABASE CONFIGURATION (Optional) =====
# Uncomment and configure if you want to add database support

# DATABASE_URL=postgresql://user:password@localhost:5432/csr2bot
# MONGODB_URL=mongodb://localhost:27017/csr2bot

# ===== PAYMENT CONFIGURATION (Optional) =====
# Add payment provider configurations here

# STRIPE_SECRET_KEY=sk_test_...
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===== LOGGING CONFIGURATION =====

# Log level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# Enable file logging (true/false)
FILE_LOGGING=true

# ===== ANALYTICS CONFIGURATION (Optional) =====

# Google Analytics tracking ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===== RATE LIMITING =====

# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=20

# ===== FEATURE FLAGS =====

# Enable/disable features
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# ===== DEPLOYMENT SPECIFIC =====

# VPS/Docker specific configurations
# CONTAINER_NAME=csr2-mods-store-bot
# RESTART_POLICY=unless-stopped